<style>
.quote-content .inner-content-quote {
  display: flex;
  flex-wrap: wrap;
  margin-right: -15px;
  margin-left: -15px;
  align-items: center;
}
.quote-content .inner-content-quote .quote-img {
  flex: 0 0 35%;
  max-width: 35%;
  padding-left: 15px;
  padding-right: 30px;
}
.quote-content .inner-content-quote .quote-texts {
  flex: 0 0 65%;
  max-width: 65%;
  padding-left: 15px;
  padding-right: 15px;
}
.quote-content .inner-content-quote .quote-img img {
  width: 100%;
}
.quote-main .quote-content {
  padding: 15px;
  background-color: #f1f1f1;
}
.quote-main {
  padding-top: 15px;
}
.quote-content .quote-texts h3 {
  font-size: 25px;
  font-family: Oswald;
  color: #6b6b6b;
  font-weight: 400;
  margin-top: 0px;
}
.quote-content .quote-texts .quote-btn {
  color: #032242;
  border: 2px solid #06274b;
  padding: 7px 75px;
  text-align: justify;
  font-family: Oswald;
  font-weight: 700;
  display: inline-block;
  vertical-align: top;
}
.quote-main .quote-bottom {
  padding: 15px;
}
.quote-btns {
  display: flex;
  justify-content: space-evenly;
}
.quote-content .quote-texts .quote-btn:hover {
  background-color: #000646;
  color: #ffffff;
}
@media only screen and (max-width: 1360px) {
  .quote-content .quote-texts h3 {
    font-size: 20px;
    line-height: 1.3;
  }
  .quote-content .quote-texts .quote-btn {
    font-size: 14px;
    padding: 7px 55px;
  }
  .quote-content .quote-texts .quote-btn:not(:last-child) {
    margin-right: 10px;
  }
  .quote-btns {
    justify-content: left;
  }
}
@media only screen and (max-width: 992px) {
  .quote-content .quote-texts h3 {
    font-size: 17px;
  }
  .quote-content .quote-texts .quote-btn {
    padding: 7px 35px;
    font-size: 13px;
  }
  .quote-content .inner-content-quote .quote-img {
    padding-right: 15px;
  }
}
@media only screen and (max-width: 767px){
  .quote-content .inner-content-quote .quote-texts {
    flex: 0 0 100%;
    max-width: 100%;
  }
  .quote-content .inner-content-quote .quote-img {
    flex: 0 0 100%;
    max-width: 100%;
    margin-bottom: 15px;
  }
  .quote-content .inner-content-quote {
    text-align: center;
  }
  .quote-btns {
    justify-content: center;
  }
  .quote-main .quote-bottom {
    padding-left: 0px;
    padding-right: 0px;
    font-size: 14px;
    text-align: center;
  }
}
@media only screen and (max-width: 425px){
  .quote-content .quote-texts h3 {
    font-size: 16px;
  }
  .quote-content .quote-texts .quote-btn {
    width: 100%;
    text-align: center;
  }
  .quote-btns {
    flex-direction: column;
  }
  .quote-content .quote-texts .quote-btn:not(:last-child) {
    margin-right: 0px;
    margin-bottom: 10px;
  }
}
</style>
<div class="quote-main">
  <div class="bt-container">
    <div class="quote-content">
      <div class="inner-content-quote">
        <div class="quote-img">
          {% if section.settings.quote_img != blank %}
          <img src="{{ section.settings.quote_img |img_url:"master" }}">
          {% endif %}
        </div>
        <div class="quote-texts">
          {% if section.settings.quote_heading != blank %}
          <h3>{{ section.settings.quote_heading }}</h3>
          {% endif %}
          <div class="quote-btns">
            {% if section.settings.quote_link_txt != blank %}
            <a href="{{ section.settings.quote_link }}" class="quote-btn">{{ section.settings.quote_link_txt }}</a>
            {% endif %}
            {% if section.settings.call_link != blank %}
            <a href="{{ section.settings.call_link }}" class="quote-btn">{{ section.settings.call_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% if section.settings.bottom_text != blank %}
    <div class="quote-bottom">{{ section.settings.bottom_text }}</div>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Get Quote",
    "settings": [
      {
        "type":"image_picker",
        "id":"quote_img",
        "label":"Quote Image"
      },
      {
        "type":"text",
        "id":"quote_heading",
        "label":"Quote Heading"
      },
      {
        "type":"text",
        "id":"quote_link_txt",
        "label":"Quote Link Text"
      },
      {
        "type":"url",
        "id":"quote_link",
        "label":"Quote Link"
      },
      {
        "type":"text",
        "id":"call_text",
        "label":"Call Text"
      },
      {
        "type":"url",
        "id":"call_link",
        "label":"Call Link"
      },
      {
        "type":"richtext",
        "id":"bottom_text",
        "label":"Bottom Text"
      }
    ]
  }
{% endschema %}

