      {
        "type": "text",
        "id": "subhead",
        "label": "Sub Heading"
      },
      {
        "type": "url",
        "id": "firstlink",
        "label": "Add First Link"
      },
      {
        "type": "text",
        "id": "flinktext",
        "label": "Add First Link Text"
      },
      {
        "type": "url",
        "id": "secondlink",
        "label": "Add Second Link"
      },
      {
        "type": "text",
        "id": "slinktext",
        "label": "Add Second Link Text"
      },
      {
        "type": "image_picker",
        "id": "bgimg",
        "label": "Image"
      },
      {
        "type":"checkbox",
        "id":"show_shipping",
        "label":"Show Shipping"
      },
      {
        "type":"image_picker",
        "id":"ship_icon",
        "label":"Shipping Icon"
      },
      {
        "type":"text",
