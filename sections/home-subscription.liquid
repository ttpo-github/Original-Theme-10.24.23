<div class="home-subs-section section-spacing" style="background-image: url('{{ section.settings.image | img_url : 'master' }}')">
  <div class="bt-container">
    <div class="home-subs-content">
      <div class="subscription-box">
        <h2 class="section__title">{{ section.settings.title }}</h2>
        {{ section.settings.text}}
        <div class="btn-group">
          {%- if section.settings.button_text1 != blank -%}<a href="{{ section.settings.button_link1}}" class="custom-btn">{{ section.settings.button_text1}}</a>{%- endif -%}
          {%- if section.settings.button_text2 != blank -%}<a href="{{ section.settings.button_link2}}" class="custom-btn">{{ section.settings.button_text2}}</a>{%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .home-subs-section {
    background-size: cover;
    background-repeat: no-repeat;
  }
  .subscription-box {
    max-width: 480px;
    margin-left: 140px;
    background: #ffffff;
    padding: 25px 35px;
    text-align: left;
    border-radius: 10px;
  }
  .subscription-box .section__title {
    font-size: 26px;
    line-height: 1.3;
    text-align: left;
    margin-bottom: 10px;
  }
  .btn-group .custom-btn:not(:last-child) {
    margin-right: 10px;
  }
  .btn-group {
    margin-top: 20px;
  }
  @media only screen and (max-width: 1199px){
    .subscription-box{
      margin-left: 0px;
    }
    .subscription-box .section__title{
      font-size: 24px;
    }
    .home-subs-section {
      background-position: right 30% center;
    }
  }
  @media only screen and (max-width: 767px){
    .subscription-box{
      margin-left: auto;
      margin-right: auto;
    }
  }
  @media only screen and (max-width: 575px){
    .subscription-box .section__title{
      font-size: 22px;
    }
    .subscription-box{
      padding: 25px;
    }
    .btn-group .custom-btn {
      padding: 12px 21px;
      font-size: 14px;
    }
  }
  @media only screen and (max-width: 575px){
    .subscription-box{
      padding: 20px 15px;
    }
  }
  @media only screen and (max-width: 425px){
    .subscription-box .section__title{
      font-size: 20px;
    }
    .btn-group .custom-btn:not(:last-child) {
      margin-right: 4px;
    }
    .btn-group .custom-btn {
      padding: 12px 16px;
    }
  }
</style>
