<div class="teamlist-inner-section">
  <div class="bt-container">
    <h2 class="section__title">{{ section.settings.title}}</h2>
    <ul class="meetteam-list column{{section.settings.column}}">
      {% for block in section.blocks %}
      <li>
        <div class="meetteam-block">
          <figure>
          	<img src="{{ block.settings.image | img_url : '200x' }}" />
          </figure>
          <h3>{{ block.settings.title }}</h3>
          <div>{{ block.settings.designation }}</div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
{% schema %}
  {
  "name": "Meet Team List",
  "class" : "meet-team-content-section",
  "tag" :"section",
    "settings": [
      {
        "type" : "text",
        "id" : "title",
        "label" : "Add Title"
      },
	  {
        "type": "select",
        "id": "column",
        "options": [
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "6",
            "label": "6"
          }
        ],
        "default": "5",
        "label": "Select No. of Column"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
	"blocks" : [
	{
      "type" : "title",
      "name" : "Team",
      "settings" : [
          {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Select Image"
          },
          {
            "type" : "text",
            "id" : "title",
            "label" : "Add Name"
          },
          {
            "type" : "text",
            "id" : "designation",
            "label" : "Add Designation"
          }
        ]
	  }
 	]
  }
{% endschema %}

