<style>
.schedule-main .schedule-images {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
  padding: 15px;
  margin-bottom: 30px;
}
.schedule-main .schedule-images .image-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.schedule-main {
  margin-top: 30px;
  margin-bottom: 30px;
}
.schedule-text {
  display: grid;
  grid-template-columns: repeat(2,1fr);
  align-items: center;
  margin-top: 50px;
  column-gap: 30px;
}
.schedule-text .schedule-heading {
  text-align: center;
}
.schedule-lists ul li:not(:last-child) {
  margin-bottom: 10px;
}
.schedule-text .schedule-heading h2,.schedule-text .schedule-heading a {
  text-align: center;
  font-size: 36px;
  margin-bottom: 0;
  font-family: Oswald;
  color: #0c1869;
}
.schedule-text .schedule-heading a strong {
  font-size: 51px;
}
@media only screen and (max-width: 1360px) {
  .schedule-text {
    margin-top: 25px;
  }
  .schedule-main .schedule-images {
    margin-bottom: 25px;
  }
  .schedule-text .schedule-heading h2, .schedule-text .schedule-heading a {
    font-size: 28px;
  }
  .schedule-text .schedule-heading a strong {
    font-size: 36px;
  }
}
@media only screen and (max-width: 992px) {
  .schedule-main .schedule-images {
    gap: 20px;
  }
  .schedule-main .schedule-images {
    margin-bottom: 15px;
  }
  .schedule-text {
    margin-top: 15px;
  }
  .schedule-text .schedule-heading h2, .schedule-text .schedule-heading a {
    font-size: 22px;
  }
  .schedule-text .schedule-heading a strong {
    font-size: 32px;
  }
  .schedule-main {
    margin-top: 15px;
    margin-bottom: 15px;
  }
}
@media only screen and (max-width: 767px) {
  .schedule-main .schedule-images {
    grid-template-columns: repeat(2, 1fr);
  }
  .schedule-text {
    column-gap: 20px;
  }
  .schedule-text .schedule-heading a strong {
    font-size: 28px;
  }
}
@media only screen and (max-width: 575px) {
  .schedule-text {
    grid-template-columns: repeat(1,1fr);
  }
  .schedule-lists ul {
    display: inline-block;
  }
  .schedule-lists ul li {
    text-align: left;
  }
  .schedule-main .schedule-images {
    margin-bottom: 10px;
  }
  .schedule-text {
    margin-top: 10px;
  }
}
@media only screen and (max-width: 425px) {
  .schedule-main .schedule-images {
    gap: 10px;
  }
  .schedule-text .schedule-heading h2 {
    margin-top: 0px;
  }
  .schedule-text .schedule-heading h2 p:last-child {
    margin-top: 0px;
  }
  .schedule-text .schedule-heading a strong {
    font-size: 25px;
  }
}
</style>
<div class="schedule-main">
  <div class="bt-container">
    <div class="schedule-images">
     {% for block in section.blocks %}
        {% if block.settings.img != blank %}
          <div class="image-item">
            <img src="{{ block.settings.img | img_url:"master" }}">
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="schedule-text">
      <div class="schedule-heading">
        {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
      <div class="schedule-lists">
        {% if section.settings.list != blank %}
          {{ section.settings.list }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Schedule Repair",
    "settings": [
      {
        "type":"richtext",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"richtext",
        "id":"list",
        "label":"Schedule List Text"
      }
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Image",
        "settings":[
          {
            "type":"image_picker",
            "id":"img",
            "label":"Select Image"
          }
        ]
      }
    ]
  }
{% endschema %}

